<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="create-users_table" author="M.Gogolin">
        <preConditions>
            <not>
                <tableExists tableName="users_table"/>
            </not>
        </preConditions>

        <createTable tableName="users_table">
            <column name="telegram_user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="user_name" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(15)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="is_volunteer" type="BOOLEAN"/>
        </createTable>

    </changeSet>

    <changeSet id="fill-users_table" author="M.Gogolin">
        <preConditions>
            <tableIsEmpty tableName="users_table"/>
        </preConditions>
        <loadData tableName="users_table" file="liquibase/v_1/users_table-data.csv"/>
    </changeSet>

    <changeSet id="add-column-to-users_table" author="M.Gogolin">
        <preConditions>
            <tableExists tableName="users_table"/>
        </preConditions>

        <addColumn tableName="users_table">
            <column name="is_admin" type="BOOLEAN"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>